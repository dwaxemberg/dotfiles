[user]
  name = Diego Waxemberg
  email = diego.waxemberg@gmail.com
[github]
  user = dwaxemberg
[help]
  autocorrect = 10
[log]
  decorate = short
[color]
  ui = true
[merge]
  log = 1000
[pager]
  show-branch = true
  status = true
[include]
  path = ~/.gitconfig.local
[apply]
  whitespace = fix
[core]
  excludesfile = ~/.gitignore
  pager = less -r
  # global gitignore, useful for hiding editor files
[push]
  default = simple
[rebase]
  autosquash = true
  stat = true
[alias]
  st = status --short --branch
  ci = commit
  co = checkout
  au = add --update
  aa = add --all
  su = submodule update --init
  oneline = log --oneline
  graph = log --oneline --graph
  last = log --max-count=1
  patch = add --patch
  amend = commit --amend
  staged = diff --cached
  ph = push origin HEAD
  poh = pull --rebase origin HEAD
  rom = rebase origin/master
  from = !sh -c 'git fetch origin && git rebase origin/master' -
  wip = commit --message=WIP --no-verify
